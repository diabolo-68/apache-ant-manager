{
  "name": "apache-ant-manager",
  "displayName": "Apache Ant Manager",
  "description": "Configure and manage Apache Ant tasks with a graphical UI similar to Eclipse",
  "version": "1.0.0",
  "publisher": "diabolo-68",
  "author": {
    "name": "diabolo-68"
  },
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/diabolo-68/apache-ant-manager.git"
  },
  "bugs": {
    "url": "https://github.com/diabolo-68/apache-ant-manager/issues"
  },
  "homepage": "https://github.com/diabolo-68/apache-ant-manager#readme",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/build.xml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "apache-ant-manager.openConfiguration",
        "title": "Open Ant Configuration",
        "category": "Ant",
        "icon": "$(settings-gear)"
      },
      {
        "command": "apache-ant-manager.selectBuildFile",
        "title": "Select Ant Build File",
        "category": "Ant",
        "icon": "$(file-code)"
      },
      {
        "command": "apache-ant-manager.runTargets",
        "title": "Run Ant Targets",
        "category": "Ant",
        "icon": "$(play)"
      },
      {
        "command": "apache-ant-manager.refresh",
        "title": "Refresh",
        "category": "Ant",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .xml",
          "command": "apache-ant-manager.openConfiguration",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Apache Ant Manager",
      "properties": {
        "apacheAntManager.antHome": {
          "type": "string",
          "default": "",
          "description": "Path to Apache Ant installation directory (ANT_HOME). Required if your build files use custom Ant tasks or libraries."
        },
        "apacheAntManager.javaHome": {
          "type": "string",
          "default": "",
          "description": "Path to Java installation directory (JAVA_HOME). Required if Java is not in your PATH."
        },
        "apacheAntManager.importDepth": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "maximum": 10,
          "description": "Maximum depth level for following import/include statements in build files. Set to 0 to parse only the main file. Higher values may slow down parsing."
        },
        "apacheAntManager.useJavaParser": {
          "type": "boolean",
          "default": false,
          "description": "Use the Java Ant parser instead of the fast XML parser. The Java parser resolves Ant properties but is slower and ignores the import depth limit."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
